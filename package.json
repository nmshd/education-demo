{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/lib",
    "packages/demo-frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:login": "npm run build --workspace packages/demo-frontend",
    "dev": "npm run dev --workspace packages/demo-frontend",
    "start": "docker compose -f docker-compose.debug.yml -f docker-compose.debug.demo.yml up -d",
    "stop": "docker compose -f docker-compose.debug.yml -f docker-compose.debug.demo.yml down",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "npx eslint --ext .ts,.svelte,.js,.d.ts ./packages/demo-frontend/src ./packages/insurance/src ./packages/doctor/src ./packages/server/src ./packages/lib/src",
    "lint:prettier": "prettier --check .",
    "prettier": "prettier ."
  },
  "devDependencies": {
    "@js-soft/eslint-config-ts": "1.5.2",
    "eslint": "^8.12.0",
    "eslint-plugin-svelte3": "3.4.1",
    "prettier": "^2.6.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@js-soft/ts-utils": "^2.3.0",
    "@nmshd/content": "^2.2.0"
  }
}
